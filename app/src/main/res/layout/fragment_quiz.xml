<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.fjuarez6.flagquiz.QuizActivityFragment"
    tools:showIn="@layout/activity_quiz"
    app:layout_anchorGravity="center"
    >

    <TextView
        android:text="question 7 to 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionNumberTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/flagImageView"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_above="@+id/guessCountryTextView"
        android:padding="20dp"
        android:layout_below="@+id/questionNumberTextView"/>

    <TextView
        android:text="Guess the Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guessCountryTextView"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/row1LinearLayout"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row1LinearLayout"
        android:weightSum="1"
        android:layout_above="@+id/row2LinearLayout"
        android:layout_alignParentStart="true">

        <Button
            android:text="Button"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:layout_weight="0.5"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="match_parent"/>

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:layout_weight="0.5"
            style="@android:style/Widget.Material.Button.Colored"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row2LinearLayout"
        android:weightSum="1"
        android:layout_above="@+id/row3LinearLayout"
        android:layout_alignParentStart="true">

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button11"
            android:layout_weight="0.5"
            style="@android:style/Widget.Material.Button.Colored"/>

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button5"
            android:layout_weight="0.5"
            style="@android:style/Widget.Material.Button.Colored"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row3LinearLayout"
        android:weightSum="1"
        android:layout_above="@+id/row4LinearLayout"
        android:layout_alignParentStart="true">

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button7"
            android:layout_weight="0.5"
            style="@android:style/Widget.Material.Button.Colored"/>

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button6"
            android:layout_weight="0.5"
            style="@android:style/Widget.Material.Button.Colored"/>

    </LinearLayout>

    <TextView
        android:text="Answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerTextView"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/row4LinearLayout"
        android:layout_marginBottom="12dp"
        android:layout_weight="0.5"
        android:layout_above="@+id/answerTextView"
        android:layout_alignParentStart="true">

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button10"
            android:layout_weight="0.5"
            style="@android:style/Widget.Material.Button.Colored"
            />

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button9"
            android:layout_weight="0.5"
            style="@android:style/Widget.Material.Button.Colored"/>
    </LinearLayout>

</RelativeLayout>
